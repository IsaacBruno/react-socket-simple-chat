{
  "name": "react-socket-simple-chat",
  "version": "0.3.0",
  "description": "a simple chat application that uses react.js, redux and socket.io",
  "scripts": {
    "socket-server": "nodemon server/index.js",
    "development": "webpack-dev-server --mode development --open --hot",
    "start": "npm-run-all -p socket-server development",
    "build": "webpack --mode production",
    "deploy": "gh-pages -d dist",
    "do-deploy": "npm-run-all -s build deploy",
    "serve:": "serve -s dist -o -p 3000",
    "do-serve": "npm-run-all -s build serve"
  },
  "keywords": [
    "webpack4",
    "react",
    "redux",
    "socket.io"
  ],
  "author": "Erko Bridee",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "dayjs": "^1.6.3",
    "hashids": "^1.1.4",
    "lodash": "^4.17.10",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "socket.io-client": "^2.1.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "autoprefixer": "^8.5.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "dotenv-webpack": "^1.5.5",
    "gh-pages": "^1.1.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.1.0",
    "ip": "^1.1.5",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "postcss-flexbugs-fixes": "^3.3.1",
    "postcss-loader": "^2.1.5",
    "react-hot-loader": "^4.2.0",
    "sass-loader": "^7.0.1",
    "serve": "^6.5.7",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.4.0",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1"
  },
  "nodemonConfig": {
    "watch": ["server"]
  }
}
